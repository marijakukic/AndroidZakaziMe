<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ListItemActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/naslovUsluge"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>


            <ImageView
                android:id="@+id/slikaUsluge"
                android:layout_width="match_parent"
                android:layout_height="342dp"
                android:src="@drawable/cool_pic" />

            <TextView
                android:id="@+id/nacinPlacanjaUsluge"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                />


            <TextView
                android:id="@+id/adresaUsluge"
                android:layout_width="match_parent"
                android:layout_height="34dp" />




            <Button
                android:id="@+id/lokacijaDugme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vidi lokaciju" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>
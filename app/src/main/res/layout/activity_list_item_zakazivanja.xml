<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MojaZakazivanjaActivity">

    <TextView
        android:id="@+id/naslov"
        android:layout_width="500dp"
        android:layout_height="96dp"
        android:textSize="20dp"
        android:text="BelleFemeSalon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sati"
        android:layout_width="278dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/naslov"

        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="13.04.2019. 12:00h"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/termin"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/naslov"

        android:layout_marginBottom="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="13.04.2019. 12:00h"
        android:textSize="15dp" />

    <Button
        android:id="@+id/otkazi"
        android:layout_width="124dp"
        android:layout_height="76dp"
        android:layout_marginLeft="4dp"

        android:layout_toRightOf="@id/termin"
        android:text="Otkazi" />




</RelativeLayout>
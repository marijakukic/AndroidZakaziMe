<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MojaZakazivanjaActivity">

    <ImageView
        android:id="@+id/slikaKorisnika"
        android:layout_width="139dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/korisnik"
        android:layout_width="176dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@id/slikaKorisnika"
        android:layout_marginLeft="144dp"
        android:text="BelleFemeSalon"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/komentar"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/korisnik"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-23dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:text="13.04.2019. 12:00h"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="datum" />


</RelativeLayout>